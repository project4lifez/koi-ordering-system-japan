        ];

        const tabsContainer = document.getElementById('tab-container');
        const farmSections = document.querySelectorAll('.koi-farm-content');
        let currentFarm = 0;  // Currently visible farm
        let startTabIndex = 0;  // Start index of visible tabs
        const maxVisibleTabs = 4;  // Maximum number of visible tabs

        // Function to display the current farm and hide others
        function showFarm(index) {
            document.querySelectorAll('.koi-farm-tab').forEach((tab, i) => {
                tab.classList.toggle('active', i === index - startTabIndex);  // Adjusted for the visible tabs
            });
            farmSections.forEach((section, i) => {
                section.style.display = i === index ? 'flex' : 'none';
            });
        }

        // Function to render tabs based on the visible range
        function renderTabs() {
            tabsContainer.innerHTML = '';  // Clear current tabs
            const visibleTabs = tabsData.slice(startTabIndex, startTabIndex + maxVisibleTabs);
            visibleTabs.forEach((tabData, index) => {
                const tabElement = document.createElement('div');
                tabElement.classList.add('koi-farm-tab');
                if (startTabIndex + index === currentFarm) {
                    tabElement.classList.add('active');
                }
                tabElement.innerText = tabData.name;
                tabElement.addEventListener('click', () => {
                    currentFarm = startTabIndex + index;
                    showFarm(currentFarm);
                    renderTabs();
                });
                tabsContainer.appendChild(tabElement);
            });
        }

        // Event listeners for Previous and Next tab buttons
        document.getElementById('prev-tabs-button').addEventListener('click', () => {
            if (currentFarm > 0) {
                currentFarm--;
                if (currentFarm < startTabIndex) {
                    startTabIndex--;
                }
                showFarm(currentFarm);
                renderTabs();
            }
        });

        document.getElementById('next-tabs-button').addEventListener('click', () => {
            if (currentFarm < tabsData.length - 1) {
                currentFarm++;
                if (currentFarm >= startTabIndex + maxVisibleTabs) {
                    startTabIndex++; // Shift visible tabs to the right
                }
                showFarm(currentFarm);
                renderTabs();
            }
        });

        // Initial render of tabs and farms
        renderTabs();
        showFarm(currentFarm);

        let currentService = 0;
        const services = document.querySelectorAll('.service');
        const totalServices = services.length;

        function showService(index) {
            const serviceSlider = document.querySelector('.service-slider');
            serviceSlider.style.transform = `translateX(-${index * 100}%)`;
