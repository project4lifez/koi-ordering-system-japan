        function prevService() {
            currentService = (currentService - 1 + totalServices) % totalServices;
            showService(currentService);
        }

        setInterval(nextService, 15000); // Change service every 15 seconds

        const feedbackCards = document.querySelectorAll('.feedback-card');
        let currentFeedback = 0;

        function showFeedback(index) {
            feedbackCards.forEach((card, i) => {
                card.classList.remove('active');
                if (i === index) {
                    card.classList.add('active');
                }
            });
        }

        document.getElementById('prev-feedback').addEventListener('click', () => {
            currentFeedback = (currentFeedback - 1 + feedbackCards.length) % feedbackCards.length;
            showFeedback(currentFeedback);
        });

        document.getElementById('next-feedback').addEventListener('click', () => {
            currentFeedback = (currentFeedback + 1) % feedbackCards.length;
            showFeedback(currentFeedback);
        });

        showFeedback(currentFeedback);

        const feedbackCarousel = document.querySelector('.feedback-carousel');
        const nextButton = document.getElementById('next-feedback');
        const prevButton = document.getElementById('prev-feedback');

        nextButton.addEventListener('click', () => {
            feedbackCarousel.scrollBy({
                left: 300, // Scroll khoảng cách tương đương với chiều rộng của feedback card
                behavior: 'smooth'
            });
        });

        prevButton.addEventListener('click', () => {
            feedbackCarousel.scrollBy({
                left: -300,
                behavior: 'smooth'
            });
        });
        // bong bóng
        document.getElementById("main-chat-icon").addEventListener("click", function () {
            const chatOptions = document.getElementById("chat-options");

            // Kiểm tra trạng thái hiện tại của chatOptions
            if (chatOptions.classList.contains("hidden")) {
                chatOptions.classList.remove("hidden");
                chatOptions.classList.add("visible");
            } else {
                chatOptions.classList.remove("visible");
                chatOptions.classList.add("hidden");
            }
        });




    </script>

