@{
    ViewData["Title"] = "TripDetailMore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Booking - Nishikigoi Ordering Service</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        /* General Styles */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9f9;
            line-height: 1.6;
            padding-top: 3rem;
            transition: background-color 0.3s ease;
        }

        .trip-container {
            display: flex;
            flex-direction: row;
            padding: 70px 20px 20px;
        }

        /* Sidebar Styles */
        .trip-sidebar {
            width: 25%;
            background-color: #fff; /* White background */
            color: #333;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for sidebar */
        }

        /* Dividing the Sidebar into two sections */
        .trip-sidebar-section {
            margin-bottom: 20px;
            padding: 15px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05); /* Light shadow */
            transition: box-shadow 0.3s ease; /* Smooth shadow transition */
        }

            /* Hover effect */
            .trip-sidebar-section:hover {
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* Increased shadow on hover */
            }

        .trip-sidebar h4 {
            font-size: 18px;
            margin-bottom: 10px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
        }

        .trip-sidebar p {
            margin: 10px 0;
            font-size: 16px;
        }

        .trip-sidebar .badge {
            background-color: #3498db; /* Blue */
            color: white;
            padding: 4px 8px;
            border-radius: 5px;
        }

        .trip-select {
            width: 100%;
            padding: 5px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        .trip-data-placeholder {
            font-weight: bold;
            color: #3498db; /* Blue */
        }

        .trip-sidebar a {
            color: #3498db; /* Blue */
            text-decoration: none;
        }

        /* Main Trip Details */
        .trip-details {
            width: 75%;
            padding: 20px;
            margin-left: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .trip-details h2 {
                font-size: 24px;
                color: #333;
                margin-bottom: 10px;
            }

            .trip-details h3 {
                font-size: 20px;
                margin-bottom: 20px;
                color: #3498db; /* Blue */
            }

            .trip-details p {
                font-size: 16px;
                color: #666;
                margin-bottom: 20px;
            }

        /* Trip Day Section */
        .trip-day-section h4 {
            font-size: 18px;
            margin-bottom: 10px;
            color: #3498db; /* Blue */
            border-bottom: 1px solid #3498db; /* Blue */
            padding-bottom: 5px;
        }

        .trip-timeline {
            margin: 20px 0;
            padding-left: 20px;
            border-left: 2px solid #ddd;
        }

        .trip-event {
            margin-bottom: 15px;
            position: relative;
        }

        .trip-time {
            font-size: 14px;
            color: #777;
            margin: 0;
            width: 80px;
            display: inline-block;
            text-align: center;
        }

        /* Button with Arrow */
        .trip-toggle-btn {
            font-size: 16px;
            color: #333;
            background-color: transparent;
            border: none;
            cursor: pointer;
            text-align: left;
            padding: 10px 0;
            margin-bottom: 5px;
            display: flex;
            justify-content: flex-start;
            align-items: center;
            width: 100%;
            transition: background-color 0.3s ease;

        }

            .trip-toggle-btn:hover {
                color: #3498db; /* Blue */
                background-color: rgba(52, 152, 219, 0.1);
            }

        .arrow {
            margin-left: 10px;
            transition: transform 0.3s ease;
        }

            .arrow.rotate {
                transform: rotate(180deg);
            }

        .trip-details-content {
            display: none;
            font-size: 14px;
            color: #666;
            margin-top: 5px;
            padding: 10px;
            background-color: #ecf0f1;
            border: 1px solid #ddd;
            border-radius: 5px;

        }

            .trip-details-content p {
                text-align: center; /* Center-align the paragraph text */
                margin: 0 auto;
            }

    </style>

</head>

<body>
    <div class="trip-container">
        <!-- Left Sidebar -->
        <div class="trip-sidebar">
            <!-- First section -->
            <div class="trip-sidebar-section">
                <div class="trip-info-section">
                    <h4><strong>Information</strong></h4>
                    <p>Your order <span class="badge">3</span></p>
                </div>
                <div class="trip-account-section">
                    <h4><strong>Account</strong></h4>
                    <p>Profile</p>
                </div>
            </div>

            <!-- Second section -->
            <div class="trip-sidebar-section">
                <div class="trip-fish-info-section">
                    <h4><strong>Information about purchased fish</strong></h4>
                    <label for="trip-day-select">Day</label>
                    <select id="trip-day-select" class="trip-select">
                        <option value="1">Day 1</option>
                        <option value="2">Day 2</option>
                        <option value="3">Day 3</option>
                        <option value="4">Day 4</option>
                        <option value="5">Day 5</option>
                    </select>
                    <p>Koi breed: <span class="trip-data-placeholder"></span></p>
                    <p>Farm: <span class="trip-data-placeholder"></span></p>
                    <p>Quantity: <span class="trip-data-placeholder"></span></p>
                    <p>Deposit: <span class="trip-data-placeholder"></span></p>
                    <p>Price: <span class="trip-data-placeholder"></span></p>
                    <p>Total day <span id="total-day-number">1</span>: <span class="trip-data-placeholder"></span></p>
                    <p>Total all: <span class="trip-data-placeholder"></span></p>
                    <p>Images: <span class="trip-data-placeholder"></span></p>
                </div>
            </div>
        </div>

        <!-- Main Trip Details -->
        <div class="trip-details">
            <h2 style="text-align: center; font-size: 35px; margin-bottom: 20px">TRIP DETAIL</h2>

            <h3>Asagi Koi Trip AKT001</h3>
            <p>📅 Thursday, 19 Sep, 7:00 AM 🗺️ Japan</p>
           
            <!-- Day 1 details -->
            <div class="trip-day-section" data-day="1">
                <button class="trip-toggle-btn" onclick="toggleDayDetails(this)">
                    <h4>Day 1 (19/09/2024): DAINICHI KOI FARM</h4>
                    <span class="arrow">&#9660;</span> <!-- Arrow here -->
                </button>
                <div class="trip-timeline" style="display: none;">
                    <!-- Hide initially -->
                    <div class="trip-event">
                        <div class="trip-toggle-btn">
                            <strong>7:00 AM</strong> - Haneda Airport, Tokyo International Airport                      
                        </div>
                        <p class="trip-details">Haneda Airport is one of Tokyo's two primary airports...</p>
                        
                        <div class="trip-toggle-btn">
                            <strong>10:00 AM</strong> - Dainichi Koi Farm, Ojiya, Niigata
                        </div>
                        <p class="trip-details">Dainichi Koi Farm is renowned for its high-quality koi fish...</p>

                        <div class="trip-toggle-btn">
                            <strong>12:00 PM</strong> - Hotel Nikko Niigata
                        </div>
                        <p class="trip-details">Hotel Nikko Niigata offers stunning views of the Shinano River...</p>

                        <div class="trip-toggle-btn">
                            <strong>1:00 PM</strong> - Day 1 complete
                        </div>
                        <p class="trip-details">End of Day 1 activities...</p>
                    </div>
                 
                </div>
            </div>



            <!-- Day 2 details -->
            <div class="trip-day-section" data-day="2">
                <button class="trip-toggle-btn" onclick="toggleDayDetails(this)">
                    <h4>Day 2 (20/09/2024): MOMOTARO KOI FARM</h4>
                    <span class="arrow">&#9660;</span> <!-- Arrow here -->
                </button>
                <div class="trip-timeline" style="display: none;">
                    <!-- Hide initially -->
                    <div class="trip-event">
                        <div class="trip-toggle-btn">
                            <strong>8:00 AM</strong> - Breakfast at the hotel
                        </div>
                        <p class="trip-details">Enjoy a delicious breakfast featuring local cuisine, including fresh sushi and seasonal fruits, before a day of activities.</p>
                    </div>
                    <div class="trip-event">
                        <div class="trip-toggle-btn">
                            <strong>10:00 AM</strong> - Visit to Momotaro Koi Farm
                        </div>
                        <p class="trip-details">Explore Momotaro Koi Farm, known for its premium koi fish and beautiful landscaped ponds. Experience the tranquility of nature and the elegance of koi.</p>
                    </div>
                    <div class="trip-event">
                        <div class="trip-toggle-btn">
                            <strong>1:00 PM</strong> - Lunch at local restaurant
                        </div>
                        <p class="trip-details">Savor authentic Japanese dishes at a local restaurant. Don't miss out on trying the regional specialties!</p>
                    </div>
                    <div class="trip-event">
                        <div class="trip-toggle-btn">
                            <strong>4:00 PM</strong> - Return to Haneda Airport
                        </div>
                        <p class="trip-details">Transfer back to Haneda Airport, concluding your wonderful trip filled with unforgettable memories of Koi fish and Japanese culture.</p>
                    </div>
                </div>
            </div>



    <script>
        // Toggle day details (trip timeline)
        function toggleDayDetails(button) {
            const tripTimeline = button.nextElementSibling; // Select the trip-timeline div
            const arrow = button.querySelector('.arrow');  // Select the arrow inside the button

            if (tripTimeline.style.display === "none") {
                tripTimeline.style.display = "block";
                button.classList.add('active'); // Add active class to rotate arrow
            } else {
                tripTimeline.style.display = "none";
                button.classList.remove('active'); // Remove active class
            }
        }

        // Toggle event details (individual trip event content)
        function toggleDetails(button) {
            const tripDetails = button.nextElementSibling; // Select the trip-details-content div

            if (tripDetails.style.display === "none") {
                tripDetails.style.display = "block";
            } else {
                tripDetails.style.display = "none";
            }
        }

        

    </script>
    <script>
        // Bắt sự kiện khi thay đổi giá trị trong dropdown
        document.getElementById('trip-day-select').addEventListener('change', function () {
            // Lấy giá trị được chọn
            var selectedDay = this.value;

            // Cập nhật số ngày hiển thị trong "Total day"
            document.getElementById('total-day-number').textContent = selectedDay;
        });
    </script>
</body>
</html>
