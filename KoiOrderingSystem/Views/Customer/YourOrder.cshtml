@model IEnumerable<KoiOrderingSystem.Models.Booking>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <h1>Your Order - Nishikigoi Ordering Service</h1>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* CSS với tiền tố custom- để tránh xung đột */
        body {
            background-color: #f1f1f1; /* Set body background to gray */
            margin: 0;
            padding: 0;
        }

        .custom-container {
            display: flex;
            min-height: calc(100vh - 100px);
        }

        .custom-sidebar {
            background-color: white;
            width: 20%;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

            .custom-sidebar h2 {
                margin-bottom: 20px;
            }

            .custom-sidebar ul {
                list-style: none;
                padding: 0; /* Remove default padding */
            }

            .custom-sidebar li {
                margin-bottom: 15px;
                font-size: 18px;
                padding: 10px; /* Add padding for better spacing */
                border-radius: 5px; /* Rounded corners */
                display: flex;
                align-items: center; /* Center align icons with text */
            }

                .custom-sidebar li a {
                    color: black;
                    text-decoration: none;
                    flex-grow: 1; /* Allow the link to take available space */
                }

                    .custom-sidebar li a:hover {
                        text-decoration: underline;
                    }

        /* Thêm lớp custom-active để tô xanh mục được chọn */
        .custom-active {
            background-color: #28a745; /* Active background color */
            color: white; /* Active text color */
        }

        .custom-icon {
            margin-right: 10px;
        }

        .custom-order-count {
            background-color: green;
            color: white;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 12px;
            margin-left: auto; /* Aligns the order count to the right */
        }

        .custom-content {
            flex-grow: 1;
            padding: 40px;
            background-color: #f1f1f1; /* Keep this for consistent look */
        }

            .custom-content h2 {
                margin-bottom: 20px;
            }

        .custom-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .custom-th, .custom-td {
            padding: 15px;
            text-align: center; /* Center content */
            border-bottom: 1px solid #ddd;
        }

        .custom-pending {
            background-color: #ddd;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .custom-cancel-btn, .custom-more-btn {
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .custom-cancel-btn {
            background-color: #ff4d4d;
            color: white;
        }

        .custom-more-btn {
            background-color: #28a745;
            color: white;
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div class="custom-container">
        <div class="custom-sidebar">
            <h2>Information</h2>
            <ul>
                <li class="custom-active">
                    <span class="custom-icon">🛒</span>
                    Your order
                    <span class="custom-order-count">3</span>
                </li>
                <li>
                    <span class="custom-icon">👤</span>
                    <a href="#account">Account</a>
                </li>
            </ul>
        </div>

        <div class="custom-content">
            <h2>🛒 Your order</h2>
            <table class="custom-table">
                <thead>
                    <tr>
                        <th class="custom-th">Booking ID</th>
                        <th class="custom-th">Status</th>
                        <th class="custom-th">Payment Date</th>
                        <th class="custom-th">Total</th>
                        <th class="custom-th">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var booking in Model)
                        {
                            <tr>
                                <td class="custom-td">@booking.BookingId</td>
                                <td class="custom-td">@booking.Status</td>
                                <td class="custom-td">@booking.BookingDate?.ToString("yyyy-MM-dd")</td>
                                <td class="custom-td">@booking.QuotedAmount?.ToString("C")</td>
                                <td class="custom-td">
                                    <button class="custom-cancel-btn">Cancel</button>
                                    <button class="custom-more-btn">More</button>
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No orders found.</td>
                        </tr>
                    }
                   
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
