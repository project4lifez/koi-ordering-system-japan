@model KoiOrderingSystem.Models.Booking

@{
    ViewData["Title"] = "TripDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trip Details - Nishikigoi Ordering Service</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.tiny.cloud/1/as08codcfmfm7iyms5ub7ozusoy1f9vkq3xm4a5e7fmyuoyr/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9f9;
            line-height: 1.6;
            padding-top: 3rem;
            transition: background-color 0.3s ease;
        }

        .trip-container {
            display: flex;
            flex-direction: row;
            padding: 70px 20px 20px;
        }

        .trip-sidebar {
            width: 25%;
            background-color: #fff;
            color: #333;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .trip-sidebar-section {
            margin-bottom: 20px;
            padding: 15px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
            transition: box-shadow 0.3s ease;
        }

            .trip-sidebar-section:hover {
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

        .trip-sidebar h4 {
            font-size: 18px;
            margin-bottom: 10px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
        }

        .trip-sidebar p {
            margin: 10px 0;
            font-size: 16px;
        }

        .trip-sidebar .badge {
            background-color: #3498db;
            color: white;
            padding: 4px 8px;
            border-radius: 5px;
        }

        .trip-select {
            width: 100%;
            padding: 5px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        .trip-data-placeholder {
            font-weight: bold;
            color: #3498db;
        }

        .trip-sidebar a {
            color: #3498db;
            text-decoration: none;
        }

        .trip-details {
            width: 75%;
            padding: 20px;
            margin-left: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .trip-details h2 {
                font-size: 35px;
                color: #333;
                text-align: center;
                margin-bottom: 20px;
            }

            .trip-details h3 {
                font-size: 20px;
                margin-bottom: 20px;
                color: #3498db;
            }

        .trip-day-section h4 {
            font-size: 18px;
            margin-bottom: 10px;
            color: #3498db;
            border-bottom: 1px solid #3498db;
            padding-bottom: 5px;
        }

        .trip-timeline {
            margin: 20px 0;
            padding-left: 20px;
            border-left: 2px solid #ddd;
            display: none;
            transition: max-height 0.3s ease, opacity 0.3s ease;
        }

        .trip-event {
            margin-bottom: 15px;
        }

        .trip-time {
            font-size: 16px;
            color: #333;
            margin: 0;
            display: inline-block;
            font-weight: bold;
        }

        .trip-details-editor {
            font-size: 14px;
            color: #666;
            margin-top: 5px;
            padding: 10px;
            background-color: #ecf0f1;
            border-radius: 5px;
        }

        .trip-toggle-btn {
            font-size: 16px;
            color: #333;
            background-color: transparent;
            border: none;
            cursor: pointer;
            text-align: left;
            padding: 10px 0;
            margin-bottom: 5px;
            display: flex;
            justify-content: flex-start;
            align-items: center;
            width: 100%;
            transition: background-color 0.3s ease;
        }

            .trip-toggle-btn:hover {
                color: #3498db;
                background-color: rgba(52, 152, 219, 0.1);
            }

        .arrow {
            margin-left: 10px;
            transition: transform 0.3s ease;
        }

            .arrow.rotate {
                transform: rotate(180deg);
            }

    </style>

</head>

<body>

    <div class="trip-container">
        <!-- Left Sidebar (Information about purchased fish remains unchanged) -->
        <div class="trip-sidebar">
            <!-- First section -->
            <div class="trip-sidebar-section">
                <div class="trip-info-section">
                    <h4><strong>Information</strong></h4>
                    <p><a href="/YourBooking">Your Booking </a></p>
                </div>
                <div class="trip-account-section">
                    <h4><strong>Account</strong></h4>
                    <p><a href="/Profile/CustomerProfile">Profile</a></p>
                </div>
            </div>

            <!-- Second section (Information about purchased fish) -->
            <div class="trip-sidebar-section">
                <div class="trip-fish-info-section">
                    <h4><strong>Information about purchased fish</strong></h4>
                    <label for="trip-day-select">Day</label>
                    <select id="trip-day-select" class="trip-select">
                        <option value="1">Day 1</option>
                        <option value="2">Day 2</option>
                        <option value="3">Day 3</option>
                        <option value="4">Day 4</option>
                        <option value="5">Day 5</option>
                    </select>
                    <p>Koi breed: <span class="trip-data-placeholder"></span></p>
                    <p>Farm: <span class="trip-data-placeholder"></span></p>
                    <p>Quantity: <span class="trip-data-placeholder"></span></p>
                    <p>Deposit: <span class="trip-data-placeholder"></span></p>
                    <p>Price: <span class="trip-data-placeholder"></span></p>
                    <p>Total day <span id="total-day-number">1</span>: <span class="trip-data-placeholder"></span></p>
                    <p>Total all: <span class="trip-data-placeholder"></span></p>
                    <p>Images: <span class="trip-data-placeholder"></span></p>
                </div>
            </div>
        </div>

        <!-- Main Trip Details -->
        <div class="trip-details">
            <!-- Trip Name -->
            <h2>@Model.Trip?.TripName</h2>

            <!-- Booking Start Date and End Date -->
            <h3>📅 Start: @Model.StartDate?.ToString("dddd, dd MMM yyyy")</h3>
            <h3>📅 End: @Model.EndDate?.ToString("dddd, dd MMM yyyy")</h3>

            @if (Model.Trip != null && Model.Trip.TripDetails.Any())
            {
                <!-- Loop through TripDetails and display them with the index -->
                @foreach (var detail in Model.Trip.TripDetails.Select((value, index) => new { value, index }))
                {
                    <div class="trip-day-section">
                        <!-- Display the index of each day (1-based index) -->
                        <button class="trip-toggle-btn" onclick="toggleDayDetails(this)">
                            <h4>Day @(detail.index + 1) (@detail.value.Day): @detail.value.MainTopic</h4>
                            <span class="arrow">&#9660;</span>
                        </button>

                        <div class="trip-timeline">
                            <!-- Display Main Topic and Subtopic with TinyMCE -->
                            <div class="trip-event">
                                <div class="trip-time">@detail.value.MainTopic</div>
                                <textarea class="trip-details-editor">@detail.value.SubTopic</textarea>
                            </div>

                            <!-- Display Day completed message -->
                            <div class="trip-event">
                                <div class="trip-time">Day @(detail.index + 1) completed</div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <script>
        function toggleDayDetails(button) {
            var tripTimeline = button.nextElementSibling;
            var arrow = button.querySelector('.arrow');

            if (tripTimeline.style.display === "block") {
                tripTimeline.style.display = "none";
                arrow.classList.remove('rotate');
            } else {
                tripTimeline.style.display = "block";
                arrow.classList.add('rotate');
            }
        }

        // Initialize TinyMCE on SubTopic fields
     tinymce.init({
    selector: '.trip-details-editor',
    menubar: false,
    plugins: 'lists link',
    toolbar: '', // Set toolbar to an empty string to remove it
    branding: false,
    statusbar: false,
    readonly: true, // Make the editor read-only
    setup: function (editor) {
        editor.on('init', function () {
            adjustEditorHeight(editor);
        });
        editor.on('SetContent', function () {
            adjustEditorHeight(editor);
        });
    }
});

// Function to adjust the editor height based on its content
function adjustEditorHeight(editor) {
    const content = editor.getContent();
    const tempDiv = document.createElement('div');
    tempDiv.style.visibility = 'hidden';
    tempDiv.style.position = 'absolute';
    tempDiv.style.width = editor.getContainer().clientWidth + 'px';
    tempDiv.innerHTML = content;

    document.body.appendChild(tempDiv);

    let newHeight = tempDiv.clientHeight + 20; // Add some padding
    const minHeight = 130; // Set the minimum height of the editor
    const maxHeight = 290; // Set the maximum height of the editor

    // Adjust the height based on the content but within the constraints
    newHeight = Math.max(minHeight, Math.min(newHeight, maxHeight));

    editor.getContainer().style.height = newHeight + 'px';

    document.body.removeChild(tempDiv);
}

    </script>

</body>
</html>
