@model IEnumerable<KoiOrderingSystem.Models.Booking>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <h2>Order History - Nishikigoi Ordering Service</h2>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Same styles from YourBooking view */
        body {
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            font-family: 'Roboto', sans-serif;
        }

        .custom-container {
            display: flex;
            min-height: calc(100vh - 100px);
            background-color: #ffffff;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        .custom-sidebar {
            background-color: #ffffff;
            width: 20%;
            padding: 20px;
            border-right: 2px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

            .custom-sidebar h2 {
                margin-bottom: 20px;
                font-weight: 700;
                font-size: 1.2rem;
                color: #1565c0;
            }

            .custom-sidebar ul {
                list-style: none;
                padding: 0;
            }

            .custom-sidebar li {
                margin-bottom: 15px;
                font-size: 1rem;
                padding: 10px;
                border-radius: 5px;
                display: flex;
                align-items: center;
                justify-content: space-between;
                transition: background-color 0.3s ease;
                color: #333;
            }

                .custom-sidebar li a {
                    color: #1565c0;
                    text-decoration: none;
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                }

                    .custom-sidebar li a i {
                        margin-left: 5px;
                    }

        .custom-active {
            background-color: #90caf9;
            color: white;
        }

        .custom-order-count {
            background-color: #64b5f6;
            color: white;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 12px;
        }

        .custom-content {
            flex-grow: 1;
            padding: 40px;
            background-color: #f8f9fa;
        }

            .custom-content h2 {
                font-size: 24px; /* Same font size for headings */
                font-weight: 600; /* Ensure consistency in weight */
                color: #1565c0; /* The blue color used in Your Booking */
                margin-bottom: 20px;
            }

        .custom-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: white;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        .custom-th, .custom-td {
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        .custom-th {
            background-color: #e3f2fd;
            font-weight: 700;
            color: #1565c0;
        }

        .custom-td {
            font-size: 1rem;
        }

        .custom-delivered {
            background-color: #4caf50;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
        }

        .custom-canceled {
            background-color: #f44336;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
        }

        tbody tr:hover {
            background-color: #f0f0f0;
        }
    </style>
</head>
<body>
    <div class="custom-container">
        <!-- Sidebar Section -->
        <div class="custom-sidebar">
            <ul>
                <li>
                    <a href="/YourBooking">
                        Your Booking
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
                <li class="custom-active">
                    <a href="/YourBooking/OrderHistory" style="display: flex; align-items: center; justify-content: space-between;">
                        Booking History
                        <span class="custom-order-count" style="margin-left: 8px;">@Model.Count()</span> <!-- Display the number next to Order History -->
                    </a>
                </li>
                <li>
                    <a href="/Profile/CustomerProfile">
                        Account
                        <i class="fas fa-user"></i>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content Section -->
        <div class="custom-content">
            <h2>Booking History</h2>
            <table class="custom-table">
                <thead>
                    <tr>
                        <th class="custom-th">No</th>
                        <th class="custom-th">Booking Date</th>
                        <th class="custom-th">Trip Name</th>
                        <th class="custom-th">Status</th>
                        <th class="custom-th">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int index = 1; // Counter for numbering
                        foreach (var booking in Model)
                        {
                            <tr>
                                <td class="custom-td">@index</td>
                                <td class="custom-td">@booking.BookingDate</td>
                                <td class="custom-td">@booking.Trip?.TripName</td>
                                <td class="custom-td">
                                    @if (booking.Status == "Delivered")
                                    {
                                        <span class="custom-delivered">Delivered</span>
                                    }
                                    else if (booking.Status == "Canceled")
                                    {
                                        <span class="custom-canceled">Canceled</span>
                                    }
                                </td>
                                <td class="custom-td">
                                    @if (booking.QuotedAmount.HasValue && booking.QuotedAmount > 0)
                                    {
                                        var formattedAmount = booking.QuotedAmount.Value % 1 == 0
                                        ? string.Format("{0:0}", booking.QuotedAmount.Value)
                                        : string.Format("{0:0.00}", booking.QuotedAmount.Value);
                                        @($"{formattedAmount} USD")
                                    }
                                    else
                                    {
                                        <text></text> <!-- Display empty if there is no QuotedAmount -->
                                    }
                                </td>
                            </tr>
                            index++; // Increment counter
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="custom-td" style="text-align: center;">No order history found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
