@model IEnumerable<KoiOrderingSystem.Models.Booking>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History - Nishikigoi Ordering Service</title>
    <h2>Order History - Nishikigoi Ordering Service</h2>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            font-family: 'Roboto', sans-serif;
        }

        .custom-container {
            display: flex;
            min-height: calc(100vh - 100px);
            background-color: #ffffff;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        .custom-sidebar {
            background-color: #ffffff;
            width: 20%;
            padding: 20px;
            border-right: 2px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

            .custom-sidebar h2 {
                margin-bottom: 20px;
                font-weight: 700;
                font-size: 1.2rem;
                color: #1565c0;
            }

            .custom-sidebar ul {
                list-style: none;
                padding: 0;
            }

            .custom-sidebar li {
                margin-bottom: 15px;
                font-size: 1rem;
                padding: 10px;
                border-radius: 5px;
                display: flex;
                align-items: center;
                justify-content: space-between;
                transition: background-color 0.3s ease;
                color: #333;
            }

                .custom-sidebar li a {
                    color: #1565c0;
                    text-decoration: none;
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                }

                    .custom-sidebar li a i {
                        margin-left: 5px;
                    }

        .custom-active {
            background-color: #90caf9;
            color: white;
        }

        .custom-order-count {
            background-color: #64b5f6;
            color: white;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 12px;
        }

        .custom-content {
            flex-grow: 1;
            padding: 40px;
            background-color: #f8f9fa;
        }

            .custom-content h2 {
                margin-bottom: 20px;
                font-weight: 600;
                font-size: 1.5rem;
                color: #1565c0;
            }

        .custom-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: white;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        .custom-th,
        .custom-td {
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        .custom-th {
            background-color: #e3f2fd;
            font-weight: 700;
            color: #1565c0;
        }

        .custom-td {
            position: relative;
            font-size: 1rem;
        }

        .custom-delivered {
            background-color: #4caf50;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
        }

        .custom-canceled {
            background-color: #f44336;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
        }

        .custom-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background-color: #a3d9d6;
            color: white;
            border: none;
            font-size: 1.2rem;
            cursor: pointer;
            padding: 0;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .custom-pay-btn:hover {
            background-color: #7bc1bc;
        }

        .custom-more-btn {
            background-color: #90caf9;
        }

            .custom-more-btn:hover {
                background-color: #64b5f6;
            }

        /* Màu nền cam nhạt cho icon feedback */
        .custom-feedback-btn {
            background-color: #FFD699;
            color: white;
        }

            .custom-feedback-btn:hover {
                background-color: #FFCC80;
            }

        .action-buttons {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }

        /* Star rating CSS */
        .rating i {
            font-size: 30px;
            color: #ccc;
            cursor: pointer;
            transition: color 0.2s;
        }

            .rating i.checked {
                color: #FFD700;
            }

            .rating i:hover {
                color: #FFD700;
            }

        /* Modal custom styles */
        .modal-lg {
            max-width: 700px;
        }

        .modal-dialog {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .d-flex {
            margin-top: 20px;
        }

        .modal-body input,
        .modal-body textarea {
            width: 100%;
            padding: 10px;
        }

        .custom-canceled-gray-btn {
            background-color: #cfd8dc;
        }

        .custom-canceled-gray-btn:hover {
            background-color: #b0bec5;
        }

        .input-group {
            margin-bottom: 15px;
        }

        #searchInput {
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            width: calc(100% - 100px); /* Adjust the width */
        }

        #searchButton {
            padding: 10px 20px;
            background-color: #1565c0;
            color: white;
            border: none;
            cursor: pointer;
        }

            #searchButton:hover {
                background-color: #0d47a1;
            }

        #searchDate {
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-left: 10px; /* Add some space between inputs */
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
            list-style: none;
            padding: 0;
        }

        .page-item {
            margin: 0 5px; /* Khoảng cách giữa các nút */
        }

        .page-link {
            padding: 10px 15px;
            border-radius: 4px;
            text-decoration: none;
            color: #1565c0;
            background-color: #e3f2fd;
            border: 1px solid #ddd;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .page-link:hover {
                background-color: #1565c0;
                color: white;
            }

        .page-item.active .page-link {
            background-color: #64b5f6;
            color: white;
            border-color: #64b5f6;
        }

        .page-item.disabled .page-link {
            background-color: #f0f0f0;
            color: #999;
            border-color: #ddd;
        }
    </style>
</head>

<body>
    <div class="custom-container">
        <!-- Sidebar Section -->
        <div class="custom-sidebar">
            <ul>
                <li>
                    <a href="/YourBooking">
                        Your Booking
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
                <li class="custom-active">
                    <a href="/YourBooking/OrderHistory" style="display: flex; align-items: center; justify-content: space-between;">
                        Booking History
                        <span class="custom-order-count">@Model.Count()</span>
                    </a>
                </li>
                <li>
                    <a href="/Profile/CustomerProfile">
                        Account
                        <i class="fas fa-user"></i>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content Section -->
        <div class="custom-content">
            <h2>Booking History</h2>
            <!-- Search bar with Flatpickr integrated -->
            <form method="get" action="/YourBooking/BookingHistory">
                <div class="input-group mb-3" style="max-width: 400px;">
                    <!-- Combined search input for trip name, status, or date -->
                    <input type="text" id="searchInput" name="searchKeywords" class="form-control" placeholder="Search for trip name, status, or date">

                    <button class="btn btn-primary" id="searchButton" type="submit">Search</button>
                </div>
            </form>
            <table class="custom-table">
                <thead>
                    <tr>
                        <th class="custom-th">No</th>
                        <th class="custom-th">Booking Date</th>
                        <th class="custom-th">Trip Name</th>
                        <th class="custom-th">Status</th>
                        <th class="custom-th">Price</th>
                        <th class="custom-th">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int currentPage = ViewBag.CurrentPages ?? 1; // Nếu ViewBag.CurrentPage là null, đặt giá trị mặc định là 1
                        int pageSize = ViewBag.PageSizes ?? 10;      // Nếu ViewBag.PageSize là null, đặt giá trị mặc định là 10

                        int index = 1 + (currentPage - 1) * pageSize; // Tính toán chỉ số bắt đầu
                        foreach (var booking in Model)
                        {
                            <tr>
                                <td class="custom-td">@index</td>
                                <td class="custom-td">@booking.BookingDate</td>
                                <td class="custom-td">@booking.Trip?.TripName</td>
                                <td class="custom-td">
                                    @if (booking.Status == "Delivered")
                                    {
                                        <span class="custom-delivered">Delivered</span>
                                    }
                                    else if (booking.Status == "Canceled")
                                    {
                                        <span class="custom-canceled">Canceled</span>
                                    }
                                </td>
                                <td class="custom-td">
                                    @if (booking.QuotedAmount.HasValue && booking.QuotedAmount > 0)
                                    {
                                        var adjustedAmount = booking.QuotedAmount.Value * (decimal)1.05;
                                        var formattedAmount = adjustedAmount % 1 == 0
                                        ? string.Format("{0:0}", adjustedAmount)
                                        : string.Format("{0:0.00}", adjustedAmount);
                                        @($"{formattedAmount} USD")
                                    }
                                </td>
                                <td class="custom-td action-buttons">
                                    @if (booking.Status != "Canceled" && !string.IsNullOrEmpty(booking.Trip?.TripName))
                                    {
                                        <button class="custom-pay-btn custom-btn" title="Pay Now" onclick="window.location.href='/YourBooking/Payment?bookingId=@booking.BookingId';">
                                            <i class="fa-regular fa-credit-card fa-fw"></i>
                                        </button>
                                        <button class="custom-more-btn custom-btn" title="More Info" onclick="window.location.href='@Url.Action("TripDetail", "YourBooking", new { bookingId = booking.BookingId })'">
                                            <i class="fa-solid fa-info-circle fa-fw"></i>
                                        </button>

                                        @if (booking.Status == "Delivered")
                                        {
                                            <button class="custom-feedback-btn custom-btn" title="Leave Feedback" data-booking-id="@booking.BookingId" data-trip-name="@booking.Trip?.TripName">
                                                <i class="fa-solid fa-comment-dots fa-fw"></i>
                                            </button>
                                        }
                                    }
                                    else if (booking.Status == "Canceled" && !string.IsNullOrEmpty(booking.Trip?.TripName))
                                    {
                                        <button class="custom-more-btn custom-btn" title="More Info" onclick="window.location.href='@Url.Action("TripDetail", "YourBooking", new { bookingId = booking.BookingId })'">
                                            <i class="fa-solid fa-info-circle fa-fw"></i>
                                        </button>
                                    }
                                    else if (booking.Status == "Canceled" && string.IsNullOrEmpty(booking.Trip?.TripName))
                                    {
                                        <button class="custom-canceled-gray-btn custom-btn" title="You canceled the form request before receiving a quote" disabled>
                                            <i class="fa-solid fa-ban fa-fw"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                            index++; // Increment counter
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="custom-td" style="text-align: center;">No order history found.</td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- Ensure the pagination controls are directly below the table -->
            <div class="pagination-container" style="margin-top: 20px; text-align: center;">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(ViewBag.CurrentPages == 1 ? "disabled" : "")">
                        <a class="page-link" href="?page=@(ViewBag.CurrentPages - 1)&searchKeywords=@ViewBag.SearchKeywords">Previous</a>
                    </li>
                    @for (int i = 1; i <= ViewBag.TotalPagess; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPages == i ? "active" : "")">
                            <a class="page-link" href="?page=@i&searchKeywords=@ViewBag.SearchKeywords">@i</a>
                        </li>
                    }
                    <li class="page-item @(ViewBag.CurrentPages == ViewBag.TotalPagess ? "disabled" : "")">
                        <a class="page-link" href="?page=@(ViewBag.CurrentPages + 1)&searchKeywords=@ViewBag.SearchKeywords">Next</a>
                    </li>
                </ul>
            </div>
      </div>
    </div>

    <!-- Feedback Modal -->
    <div class="modal fade" id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="feedbackModalLabel">Feedback</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="feedbackForm" method="post" action="/YourBooking/SubmitFeedback">
                        <input type="hidden" id="BookingId" name="BookingId" />
                        <div class="mb-3">
                            <label for="TripName" class="form-label">Trip Name</label>
                            <input type="text" class="form-control" id="TripName" readonly />
                        </div>
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <div id="starRating" class="rating">
                                <i class="fa fa-star" data-value="1"></i>
                                <i class="fa fa-star" data-value="2"></i>
                                <i class="fa fa-star" data-value="3"></i>
                                <i class="fa fa-star" data-value="4"></i>
                                <i class="fa fa-star" data-value="5"></i>
                            </div>
                            <input type="hidden" id="Rating" name="Rating" />
                        </div>
                        <div class="mb-3">
                            <label for="Comments" class="form-label">Comments</label>
                            <textarea class="form-control" id="Comments" name="Comments" rows="4"></textarea>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary">Submit Feedback</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Hiển thị modal và điền dữ liệu khi nhấn nút Feedback
            document.querySelectorAll('.custom-feedback-btn').forEach(button => {
                button.addEventListener('click', function () {
                    const bookingId = this.dataset.bookingId;
                    const tripName = this.dataset.tripName;

                    document.getElementById('BookingId').value = bookingId;
                    document.getElementById('TripName').value = tripName;

                    // Gửi yêu cầu AJAX để lấy dữ liệu feedback
                    fetch(`/YourBooking/GetFeedback?bookingId=${bookingId}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success && data.feedback) {
                                // Nếu có feedback, điền vào form và đặt chế độ chỉ xem
                                document.getElementById('Rating').value = data.feedback.rating;
                                document.getElementById('Comments').value = data.feedback.comments;
                                highlightStars(data.feedback.rating); // Đánh dấu sao

                                // Đặt các trường vào chế độ chỉ đọc
                                document.querySelectorAll('.rating i').forEach(star => {
                                    star.style.pointerEvents = 'none'; // Không cho phép click vào các ngôi sao
                                });
                                document.getElementById('Comments').setAttribute('readonly', true); // Comments không thể chỉnh sửa

                                // Ẩn nút "Submit Feedback"
                                document.querySelector('#feedbackForm button[type="submit"]').style.display = 'none';
                            } else {
                                // Nếu không có feedback, reset form
                                document.getElementById('Rating').value = "";
                                document.getElementById('Comments').value = "";
                                highlightStars(0); // Reset các sao

                                // Đặt lại các trường để có thể chỉnh sửa
                                document.querySelectorAll('.rating i').forEach(star => {
                                    star.style.pointerEvents = 'auto'; // Cho phép click vào các ngôi sao
                                });
                                document.getElementById('Comments').removeAttribute('readonly'); // Comments có thể chỉnh sửa

                                // Hiển thị nút "Submit Feedback"
                                document.querySelector('#feedbackForm button[type="submit"]').style.display = 'block';
                            }

                            let feedbackModal = new bootstrap.Modal(document.getElementById('feedbackModal'));
                            feedbackModal.show();
                        })
                        .catch(error => {
                            console.error('Error fetching feedback:', error);
                        });
                });
            });

            // Đánh giá sao
            const stars = document.querySelectorAll('#starRating .fa-star');
            stars.forEach(star => {
                star.addEventListener('click', function () {
                    const rating = this.dataset.value;
                    document.getElementById('Rating').value = rating;
                    highlightStars(rating);
                });
            });

            function highlightStars(rating) {
                stars.forEach(star => {
                    star.classList.remove('checked');
                    if (star.dataset.value <= rating) {
                        star.classList.add('checked');
                    }
                });
            }
        });
    </script>
</body>

</html>
