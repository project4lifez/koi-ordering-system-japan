@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model KoiOrderingSystem.Models.Booking

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <h2>Payment Page</h2>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #007bff;
            --secondary-color: #6c757d;
            --light-bg: #f8f9fa;
            --dark-bg: #343a40;
            --white: #ffffff;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--light-bg);
            color: var(--dark-bg);
            align-items: center; /* Center vertically */
        }

        .payment-container {
            max-width: 900px;
            margin: auto;
            padding: 40px;
            border-radius: 10px;
            background-color: var(--white);
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
        }

        .form-check-input {
            margin-top: 0.9em !important; /* Use !important to override Bootstrap's default */
        }

        .payment-title {
            font-size: 2rem;
            margin-bottom: 20px;
            text-align: center;
        }

        .payment-section-header {
            font-size: 1.5rem;
            margin-bottom: 15px;
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 10px;
        }

        .order-summary-card {
            padding: 20px;
            border: 1px solid var(--secondary-color);
            border-radius: 10px;
            margin-top: 20px;
            background-color: var(--light-bg);
        }

        .order-detail-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .total-amount {
            font-weight: bold;
            font-size: 1.2rem;
        }

        .checkout-btn {
            width: 100%;
            padding: 12px;
            background-color: #5BB2F1;
            color: var(--white);
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: background-color 0.3s ease, transform 0.1s ease; /* Adjusted transform duration */
        }

            .checkout-btn:hover {
                background-color: #4DA7E1; /* Darker shade on hover */
                transform: scale(1.02); /* Slightly increase size on hover */
            }

        .additional-info-section {
            margin-top: 40px;
            padding: 20px;
            background-color: var(--white);
            border-radius: 10px;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
        }

        .contact-card {
            transition: transform 0.2s ease; /* Added transition for card hover */
        }

            .contact-card:hover {
                transform: scale(1.05); /* Slightly enlarge the card on hover */
            }

        .back-to-booking-btn {
            padding: 12px 20px;
            background-color: #5BB2F1;
            color: var(--white);
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.1s ease; /* Adjusted transform duration */
            margin-top: 20px; /* Space from the last section */
            width: 100%; /* Full width for better UX */
        }

            .back-to-booking-btn:hover {
                background-color: #4DA7E1; /* Darker shade for hover effect */
                transform: scale(1.02); /* Slightly increase the size on hover */
            }

        .badge {
            position: absolute;
            top: 101px;
            left: 782px;
            background-color: #5BB2F1; /* Badge background color */
            color: var(--white);
            padding: 5px 10px;
            border-radius: 12px;
            font-weight: bold;
        }

            .badge.pending { /* Màu xám cho Pending */
                background-color: #a9a9a9; /* Màu xám nhạt */
                color: #FFFFFF; /* Màu chữ #333 */
                left: 795px !important;
                                        
            }

            .badge.completed {
                background-color: green; /* Màu xanh lá cây cho Completed */
            }
    </style>
</head>
<body>
    <div class="payment-container position-relative">
        <span class="badge @(Model.BookingPayments.LastOrDefault()?.Status == "Pending" ? "pending" : "completed")">
            @Model.BookingPayments.LastOrDefault()?.Status
        </span> <!-- Badge cho trạng thái đặt hàng -->
        <h1 class="payment-title">Payment</h1>

        <div class="payment-section">
            <h2 class="payment-section-header">Payment Information</h2>
            <div class="form-check">
                <input type="radio" class="form-check-input" name="payment-method" id="paypal" value="paypal" checked>
                <label class="form-check-label" for="paypal">
                    <img src="https://canhme.com/wp-content/uploads/2016/01/Paypal.png" alt="PayPal Logo" width="100" />
                </label>
            </div>
        </div>

        <div class="order-summary-card">
            <h2 class="payment-section-header">Order Summary</h2>
            @if (Model != null)
            {
                decimal quotedAmount = Model.QuotedAmount ?? 0; // Ensure a default value if null
                decimal tax = quotedAmount * 0.05m; // 5% tax
                decimal total = quotedAmount + tax; // Total amount

                <div class="order-detail-row">
                    <span>@Model.Trip?.TripName</span>
                    <span>@quotedAmount.ToString("F2") USD</span>
                </div>
                <div class="order-detail-row">
                    <span>Tax (5%)</span>
                    <span>@tax.ToString("F2") USD</span>
                </div>
                <div class="order-detail-row total-amount">
                    <span>Total</span>
                    <span>@total.ToString("F2") USD</span>
                </div>
                if (Model.BookingPayments.LastOrDefault()?.Status == "Pending")
                {
                    <form method="post" action="/YourBooking/ConfirmPayment?bookingId=@Model.BookingId">
                        <input type="hidden" name="paymentMethod" id="paymentMethod" value="paypal" />
                        <button type="submit" class="checkout-btn">Checkout</button>
                    </form>
                }
                else
                {
                    <text></text>
                }
            }
            else
            {
                <p>No booking information available. Please check your account or try again later.</p>
            }
        </div>

        <div class="additional-info-section">
            <h2 class="payment-section-header">Important Information</h2>
            <p>Please ensure all your details are correct before proceeding with the payment. If you have any questions, feel free to contact our support team.</p>

            <h3>Contact Us</h3>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm contact-card">
                        <div class="card-body text-center">
                            <i class="fas fa-phone fa-2x mb-2" style="color: var(--primary-color);"></i>
                            <h5 class="card-title">Phone</h5>
                            <p class="card-text"><strong>(123) 456-7890</strong></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm contact-card">
                        <div class="card-body text-center">
                            <i class="fas fa-envelope fa-2x mb-2" style="color: var(--primary-color);"></i>
                            <h5 class="card-title">Email</h5>
                            <p class="card-text"><strong>support@nishikigoiservice.com</strong></p>
                        </div>
                    </div>
                </div>
            </div>

            <h3>Our Promise</h3>
            <p>We offer a 30-day money-back guarantee on all our products. Your satisfaction is our priority!</p>

            <!-- Button placed below the Our Promise section -->
            <button class="back-to-booking-btn" onclick="window.location.href='/YourBooking'">Back to Your Booking</button>
        </div>
    </div>

    <!-- PayPal SDK -->
    <script src="https://www.paypal.com/sdk/js?client-id=YOUR_CLIENT_ID"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const paymentMethodInput = document.querySelector('#paymentMethod'); // Hidden input for PaymentMethodId

            // PayPal Button configuration
            paypal.Buttons({
                createOrder: function (data, actions) {
                    return actions.order.create({
                        purchase_units: [{
                            amount: {
                                value: '@((Model?.QuotedAmount ?? 0) + ((Model?.QuotedAmount ?? 0) * 0.05m)).ToString("F2"))' // Set amount dynamically including tax
                            }
                        }]
                    });
                },
                onApprove: function (data, actions) {
                    return actions.order.capture().then(function (details) {
                        console.log('Transaction completed by ' + details.payer.name.given);
                        // Handle successful transaction, e.g., redirect to confirmation page
                    });
                }
            }).render('#paypal-button-container'); // Render the PayPal button
        });
    </script>
</body>
</html>
