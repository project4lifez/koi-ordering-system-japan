@model IEnumerable<KoiOrderingSystem.Models.Account>
@{
    ViewData["Title"] = "Koi Fish Information";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: #f4f4f4;
        }

        .user-container {
            min-width: 90%;
            margin: 50px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .user-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }

            .user-header h1 {
                font-size: 48px;
                color: #333;
            }

        .user-new-account-btn {
            background-color: #1070FD;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            .user-new-account-btn:hover {
                background-color: #0e63da;
            }

        .user-search-container {
            display: flex;
            align-items: center; /* Align items horizontally */
            margin-bottom: 10px;
        }

        .user-search {
            width: 40%;
            padding: 5px 10px;
            font-size: 13px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-right: 10px; /* Space between search and dropdown */
        }

        .user-dropdown {
            width: 150px; /* Make dropdown smaller */
            padding: 5px 10px;
            font-size: 13px;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #f0f0f0;
            margin-right: 10px; /* Space between dropdown and search button */
        }

        .btn-search {
            padding: 5px 15px;
            font-size: 13px;
            background-color: #1070FD;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-search:hover {
                background-color: #0e63da;
            }

        .user-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
            background-color: white;
        }

            .user-table thead th {
                background-color: #f0f0f0;
                padding: 16px;
                text-align: center;
                border-bottom: 2px solid #e0e0e0;
            }

            .user-table tbody tr td {
                padding: 16px;
                border-bottom: 1px solid #e0e0e0;
                vertical-align: middle;
                text-align: center;
            }

        .user-info {
            display: inline-block;
            margin-left: 10px;
            text-align: left;
        }

            .user-info span {
                color: #888;
                font-size: 14px;
            }

        .user-img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-top: -29px;
        }

        .user-status {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: bold;
        }

            .user-status.active {
                background-color: #4CAF50;
                color: white;
            }

            .user-status.inactive {
                background-color: #f44336;
                color: white;
            }

        .user-details-btn {
            background-color: #1070FD;
            color: white;
            border: none;
            padding: 10px 16px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
        }

            .user-details-btn:hover {
                background-color: #0e63da;
            }

        .pagination {
            display: flex;
            justify-content: center;
            padding-top: 20px;
        }

            .pagination a {
                margin: 0 5px;
                padding: 10px 15px;
                border: 1px solid #ddd;
                color: #333;
                text-decoration: none;
                border-radius: 5px;
            }

                .pagination a.active {
                    background-color: #1070FD;
                    color: white;
                    border-color: #1070FD;
                }

                .pagination a:hover {
                    background-color: #0e63da;
                    color: white;
                }
    </style>
</head>
<body>
    <div class="user-container">
        <div class="user-header">
            <h1>User List</h1>
            <button class="user-new-account-btn" onclick="window.location.href='/Admin/CreateAccount'">Create New Account</button>
        </div>

        <!-- Search and Status Filter -->
        <form method="get" action="/Admin/UserList">
            <div class="user-search-container">
                <!-- Search Bar -->
                <input type="text" name="searchQuery" value="@ViewBag.SearchQuery" placeholder="Search by Firstname or Lastname" class="form-control user-search" />

                <!-- Status Filter -->
                <select class="form-select user-dropdown" name="status">
                    <option value="">All Status</option>
                    <option value="active" @(ViewBag.SelectedStatus == "active" ? "selected" : "")>Active</option>
                    <option value="inactive" @(ViewBag.SelectedStatus == "inactive" ? "selected" : "")>Inactive</option>
                </select>

                <!-- Search Button -->
                <button type="submit" class="btn-search">Search</button>
            </div>
        </form>

        <table class="user-table">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Email</th>
                    <th>Account Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <!-- Display User Image or Default Image -->
                            <img src="@(string.IsNullOrEmpty(user.ImageUrl) ? "/images/default.png" : user.ImageUrl)"
                                 alt="User" class="user-img" />
                            <div class="user-info">
                                <!-- Display Firstname and Lastname -->
                                @user.Lastname<br>
                                <span>Customer ID: @(user.Customers.FirstOrDefault()?.CustomerId.ToString() ?? "No Customer")</span>
                            </div>
                        </td>
                        <td>@user.Email</td>
                        <td>
                            <!-- Display User Status (Active or Inactive) -->
                            <span class="user-status @(user.Status == true ? "active" : "inactive")">
                                @(user.Status == true ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td><button class="user-details-btn" onclick="window.location.href='/Admin/ProfileDetailCus?accountId=@user.AccountId'">Details</button></td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Pagination Controls -->
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="/Admin/UserList?page=@i&status=@ViewBag.SelectedStatus&searchQuery=@ViewBag.SearchQuery">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>

    <script>
        $(document).ready(function () {
            $('#user-status-dropdown').on('change', function () {
                this.form.submit();
            });
        });
    </script>
</body>
</html>
