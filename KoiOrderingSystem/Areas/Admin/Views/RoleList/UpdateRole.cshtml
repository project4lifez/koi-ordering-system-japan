@model KoiOrderingSystem.Models.Role
@{
    ViewData["Title"] = "Role Information";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <h1 class="text-center">Role Information</h1>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            padding: 20px;
            background-color: #f8f9fa; /* Màu nền sáng */
        }

        .form-container {
            width: 100%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .form-control {
            height: calc(2.25rem + 2px);
            border-radius: 0.25rem; /* Làm tròn các góc của input */
        }

        .layout {
            display: flex;
        }

            .layout .sidebar {
                width: 25%;
                padding-right: 15px;
                font-size: 18px;
                font-weight: bold;
                color: #333; /* Màu chữ sidebar */
            }

            .layout .form-content {
                width: 75%;
            }

        /* Styling cho disabled Role ID field */
        #RoleId {
            background-color: #e9ecef; /* Màu nền xám nhạt */
            cursor: not-allowed; /* Hiển thị biểu tượng không cho phép chỉnh sửa */
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="layout">
            <div class="sidebar">
                <p class="general-info-label">Update Role Information</p>
            </div>
            <div class="form-content">
                <form id="formUpdateRole" method="post" action="/Admin/RoleList/UpdateRole/@Model.RoleId" onsubmit="return validateForm()">
                    <input type="hidden" name="roleId" value="@Model.RoleId" />
                    <div id="general-info" class="form-sections">
                        <div class="form-group">
                            <label for="RoleId" class="form-label">Role ID:</label>
                            <input type="text" class="form-control" id="RoleId" name="RoleId" value="@Model.RoleId" readonly>
                        </div>
                        <div class="form-group">
                            <label for="RoleName" class="form-label">Role Name:</label>
                            <input type="text" class="form-control" id="RoleName" name="Name" value="@Model.Name" required>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function validateForm() {
            // Hiển thị thông báo cập nhật thành công
            alert("Role updated successfully!");
            return true; // Ngăn không cho gửi form đi
        }
    </script>
</body>
