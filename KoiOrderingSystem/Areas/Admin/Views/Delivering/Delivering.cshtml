@model KoiOrderingSystem.Models.Booking
@{
    ViewData["Title"] = "Delivering";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main class="container-fluid px-4">
    <h1 class="mt-4">Dashboard (Delivering)</h1>

    <div class="row">
        <!-- Customer Information Section -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    Customer Information
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model?.Fullname</p>
                    <p><strong>Email:</strong> @Model?.Email</p>
                    <p><strong>Phone Number:</strong> @Model?.Phone</p>
                </div>
            </div>
        </div>

        <!-- Order Detail Section -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    Order Details
                </div>
                <div class="card-body">
                    <p><strong>Status:</strong> @Model?.Status</p>
                    <p><strong>Fish Delivery Date:</strong> @Model?.Po?.KoiDeliveryDate?.ToString("dd/MM/yyyy")</p>
                    <p><strong>Delivery Time:</strong> @Model?.Po?.KoiDeliveryTime</p>
                    <p><strong>Koi Price:</strong> @Model?.Po?.Podetails?.FirstOrDefault()?.TotalKoiPrice $</p>
                    <p><strong>Deposit:</strong> @Model?.Po?.Podetails?.FirstOrDefault()?.Deposit $</p>
                    <p><strong>Remaining Payment:</strong> @Model?.Po?.Podetails?.FirstOrDefault()?.RemainingPrice $</p>
                    <p><strong>Delivery Location:</strong> @Model?.HotelAccommodation</p>

                    @if (Model?.Po != null)
                    {
                        <h5>PO Details</h5>
                        <p><strong>PO Number:</strong> @Model?.Po?.Podetails</p>

                        <ul>
                            @foreach (var detail in Model?.Po?.Podetails ?? Enumerable.Empty<KoiOrderingSystem.Models.Podetail>())
                            {
                                <li>
                                    <strong>Product:</strong> @detail?.Koi,
                                    <strong>Price:</strong> @detail?.TotalKoiPrice $,
                                    <strong>Quantity:</strong> @detail?.Quantity
                                </li>
                            }
                        </ul>
                    }

                    <!-- Status update form -->
                    <form id="formUpdate" action="/Admin/Delivering/UpdateStatusDelivering" method="post">
                        <input type="hidden" name="id" value="@Model?.BookingId" />
                        <select class="form-select" name="status" id="status" style="width: 150px; margin-top: 8px"
                        @(string.Equals(Model?.Status, "delivered", StringComparison.OrdinalIgnoreCase) ? "disabled" : "")>
                            <option value="delivering" @(string.Equals(Model?.Status, "delivering", StringComparison.OrdinalIgnoreCase) ? "selected" : "")>Delivering</option>
                            <option value="delivered" @(string.Equals(Model?.Status, "delivered", StringComparison.OrdinalIgnoreCase) ? "selected" : "")>Delivered</option>
                        </select>
                        <button type="submit" class="btn btn-success ml-2 mt-2" @(string.Equals(Model?.Status, "delivered", StringComparison.OrdinalIgnoreCase) ? "disabled" : "")>Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Trip Information Section -->
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    Trip Details
                </div>
                <div class="card-body">
                    <h5>@Model?.FavoriteKoi</h5>
                    <div class="d-flex flex-column">
                        <p style="text-align: right;"><strong>Koi Price:</strong> @Model?.Po?.Podetails?.FirstOrDefault()?.TotalKoiPrice $</p>
                        <p style="text-align: right;"><strong>Deposit:</strong> @Model?.Po?.Podetails?.FirstOrDefault()?.Deposit $</p>
                    </div>
                    <div class="d-flex flex-column">
                        <p style="text-align: right;"><strong>Remaining Payment:</strong> @Model?.Po?.Podetails?.FirstOrDefault()?.RemainingPrice $</p>
                        <p class="text-danger" style="text-align: right;"><strong>Status:</strong> @Model?.Status</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
