@model KoiOrderingSystem.Models.Booking
@{
    ViewData["Title"] = "Quote (Detail Trip)";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    bool isTripExisting = Model?.Trip != null;
}
<style>
    .card {
        border-radius: 10px;
        border: none;
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: bold;
        padding: 15px;
    }

    .card-body {
        font-size: 1rem;
        padding: 20px;
    }

    .card p {
        margin-bottom: 10px;
        font-size: 1rem;
    }

    /* Center the text in the title */
    h1 {
        font-size: 1.75rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Add some padding to the card and center it */
    .col-md-6 {
        padding: 10px;
    }

    /* Add a nice shadow and round the corners */
    .card {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

    /* Slight hover effect for visual feedback */
    .card:hover {
        transform: translateY(-5px);
    }

</style>
