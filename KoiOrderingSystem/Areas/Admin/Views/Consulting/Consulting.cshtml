@model KoiOrderingSystem.Models.Booking
@{
    ViewData["Title"] = "Consulting Staff";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Koi Order Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <main class="container-fluid px-4">
        <h1 class="mt-4">Dashboard (Consulting Staff)</h1>

        <!-- Form Inline (Same Row) -->
        <div class="form-inline mb-4">
            <button class="btn btn-primary mb-2">Update Koi Order</button>

            <form action="/Admin/Consulting/UpdateStatusConsulting" method="post">
                <input type="hidden" name="id" value="@Model.BookingId" />
                <select class="form-select mb-2" name="status" id="status" style="width: 150px; margin-top: 8px"
                @(string.Equals(Model.Status, "checked out", StringComparison.OrdinalIgnoreCase) ? "disabled" : "")>
                    <option value="checked in" @(string.Equals(Model.Status, "checked in", StringComparison.OrdinalIgnoreCase) ? "selected" : "")>Checked-in</option>
                    <option value="checked out" @(string.Equals(Model.Status, "checked out", StringComparison.OrdinalIgnoreCase) ? "selected" : "")>Checked-out</option>
                </select>
                <button type="submit" class="btn btn-success ml-2 mt-2" @(string.Equals(Model.Status, "checked out", StringComparison.OrdinalIgnoreCase) ? "disabled" : "")>Update</button>
            </form>
        </div>

        <div class="row">
            <!-- Left Column: Customer Information and Updated Information -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Customer Information
                    </div>
                    <div class="card-body">
                        <p><strong>Name:</strong> @Model.Fullname</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Phone Number:</strong> @Model.Phone</p>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        Updated Information
                    </div>
                    <div class="card-body">
                        <p><strong>Delivery Time:</strong> @Model.Po?.KoiDeliveryTime ?? "N/A"</p>
                        <p><strong>Delivery Date:</strong> @Model.Po?.KoiDeliveryDate?.ToString("dd/MM/yyyy") ?? "N/A"</p>
                        <p><strong>Koi Price:</strong> @Model.Po?.Podetails?.FirstOrDefault()?.TotalKoiPrice?.ToString() ?? "N/A"</p>
                        <p><strong>Deposit:</strong> @Model.Po?.Podetails?.FirstOrDefault()?.Deposit?.ToString() ?? "N/A"</p>
                        <p><strong>Delivery Location:</strong> @Model.HotelAccommodation ?? "N/A"</p>
                    </div>
                </div>
            </div>

            <!-- Right Column: Order Detail Section -->
            <div class="col-md-6">
                <form action="/Admin/Consulting/UpdateOrderDetail" method="post">
                    <input type="hidden" name="id" value="@Model.BookingId" />

                    <div class="card mb-4">
                        <div class="card-header">
                            Order Detail
                        </div>
                        <div class="card-body">
                            <label for="delivery-time"><strong>Koi Delivery Time:</strong></label>
                            <input type="time" id="delivery-time" class="form-control mb-2" name="koiDeliveryTime" value="@Model.Po?.KoiDeliveryTime">

                            <label for="delivery-date"><strong>Koi Delivery Date:</strong></label>
                            <input type="date" id="delivery-date" class="form-control mb-2" name="koiDeliveryDate" value="@Model.Po?.KoiDeliveryDate?.ToString("yyyy-MM-dd")">

                            <label for="koi-price"><strong>Koi Price:</strong></label>
                            <input type="text" id="koi-price" class="form-control mb-2" name="koiPrice" value="@Model.Po?.Podetails?.FirstOrDefault()?.TotalKoiPrice?.ToString()">

                            <label for="deposit"><strong>Deposit:</strong></label>
                            <input type="text" id="deposit" class="form-control mb-2" name="deposit" value="@Model.Po?.Podetails?.FirstOrDefault()?.Deposit?.ToString()">

                            <label for="delivery-location"><strong>Delivery Location:</strong></label>
                            <input type="text" id="delivery-location" class="form-control mb-2" name="location" value="@Model.HotelAccommodation">

                            <button type="submit" class="btn btn-primary mt-3">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>
