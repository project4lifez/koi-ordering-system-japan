@{
    ViewData["Title"] = "Koi Fish Information";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Detail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <style>
        body {
            background-color: #f4f4f4; /* Màu nền bên ngoài */
        }

        .koibreed-column {
            border-radius: 8px; /* Góc bo tròn */
            padding: 10px; /* Khoảng cách bên trong khung */
            background-color: #f8f9fa; /* Màu nền khung */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Hiệu ứng bóng */
        }

        .koibreed-divider {
            border-top: 2px solid; /* Đường phân cách */
            margin: 20px 0; /* Khoảng cách trên và dưới đường phân cách */
        }

        .koibreed-title {
            font-weight: bold; /* In đậm */
            font-size: 1.5rem; /* Kích thước chữ lớn hơn */
            color: #1070FD; /* Màu xanh */
        }

        .koibreed-edit-button {
            background-color: #1070FD; /* Màu nền xanh */
            color: white; /* Màu chữ trắng */
            border: none; /* Không có viền */
        }

        .koibreed-edit-button:hover {
            background-color: #0d63c2; /* Màu nền khi hover (màu xanh đậm hơn) */
            color: white; /* Giữ màu chữ trắng */
            transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu mượt mà */
        }

        .profile_image {
            width: 150px;
            position: relative;
            top: 45px;
        }

    </style>
</head>
<body>
    <section>
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center">
                <div class="col col-lg-9 col-xl-8 koibreed-column">
                    <div class="koibreed-card">
                        <div class="rounded-top text-white d-flex flex-row" style="background-color: #b0b3b6; height:200px;">
                            <div class="ms-4 mt-5 d-flex flex-column profile_image">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                                     alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                     style="width: 150px; z-index: 1">
                                <button type="button" class="btn koibreed-edit-button" style="z-index: 1;">
                                    Edit profile
                                </button>
                            </div>
                            <div class="ms-3" style="margin-top: 207px; color: black">
                                <h5>
                                    <span class="koibreed-last-name">Trịnh Trần</span>
                                    <span class="koibreed-first-name">Phương Tuấn</span>
                                </h5>
                                <p>Customer ID:</p>
                            </div>
                        </div>
                        <div class="p-4 text-black bg-body-tertiary">
                            <div class="d-flex justify-content-end text-center py-1 text-body">
                                <div class="px-3">
                                    <select id="statusSelect" class="form-select koibreed-status-select" style="position: relative; left: 24px">
                                        <option value="active">Active</option>
                                        <option value="disabled">Disabled</option>
                                    </select>
                                </div>
                                <div class="px-3">
                                    <button class="koibreed-confirm-button btn btn-primary" type="button">Confirm</button>
                                </div>
                            </div>
                        </div>

                        <div class="koibreed-about-section card-body p-4 text-black">
                            <div class="mb-5 text-body">
                                <div class="koibreed-divider"></div>
                                <p class="koibreed-title mb-1">About</p>
                                <div class="p-4 bg-body-tertiary">
                                    <p class="font-italic mb-1"><strong>Gender:</strong> Male</p>
                                    <p class="font-italic mb-1"><strong>Email:</strong> example@email.com</p>
                                    <p class="font-italic mb-1"><strong>Phone:</strong> 0987654321</p>
                                    <p class="font-italic mb-1"><strong>Status:</strong> <span id="displayStatus">Active</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        $(document).ready(function() {
            $('.koibreed-confirm-button').click(function() {
                // Get the selected status from the dropdown
                var selectedStatus = $('#statusSelect').val();
                
                // Update the displayed status
                $('#displayStatus').text(selectedStatus.charAt(0).toUpperCase() + selectedStatus.slice(1));
            });
        });
    </script>
</body>
