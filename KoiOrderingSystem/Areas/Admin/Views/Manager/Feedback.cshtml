@model IEnumerable<KoiOrderingSystem.Models.Feedback>
@{
    ViewData["Title"] = "Manager Feedback View";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review List with Pagination</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Updated font-family */
            background-color: #f5f5f5;
            margin: 20px;
        }

        .review-list {
            width: 90%; /* Tăng kích thước form */
            margin: 0 auto;
            background: #fff;
            padding: 30px; /* Tăng padding để form rộng hơn */
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #333;
            text-align: center; /* Căn giữa tiêu đề */
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #f0f0f0;
        }

        .btn-detail {
            background-color: #009688;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease, color 0.3s ease;
        }

            .btn-detail:hover {
                background-color: #00796b;
                color: #e0f7fa;
                transform: scale(1.05);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            }

        /* Pagination styles */
        .pagination {
            text-align: center;
            margin-top: 20px;
        }

            .pagination a {
                color: #009688;
                padding: 10px 15px;
                text-decoration: none;
                border: 1px solid #ddd;
                margin: 0 5px;
                border-radius: 5px;
            }

                .pagination a.active {
                    background-color: #009688;
                    color: white;
                    border: 1px solid #009688;
                }

                .pagination a:hover {
                    background-color: #00796b;
                    color: white;
                }
    </style>
</head>
<body>

    <div class="review-list">
        <h2>FEEDBACK LIST</h2>
        <table>
            <thead>
                <tr>
                    <th>No</th> <!-- Changed from ID to No -->
                    <th>Trip</th>
                    <th>Customer</th>
                    <th>Rating</th>
                    <th>Date</th>
                    <th>Comment</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Count(); i++)
                {
                    var feedback = Model.ElementAt(i); // Get feedback by index
                    <tr>
                        <td>@(i + 1)</td> <!-- Displaying sequential number -->
                        <td>@(feedback.Bookings.FirstOrDefault()?.Trip?.TripName ?? "Unknown Trip")</td>
                        <td>@(feedback.Bookings.FirstOrDefault()?.Fullname ?? "Anonymous")</td>
                        <td>@(new string('⭐', feedback.Rating ?? 0))</td>
                        <td>@feedback.Feedbackdate?.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a class="btn-detail" href="/Admin/Manager/FeedbackDetail?feedbackId=@feedback.FeedbackId">Detail</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pagination">
            @for (var i = 1; i <= ViewBag.TotalPages; i++)
            {
                <a href="/Admin/Manager/Feedback?page=@i" class="@(i == ViewBag.CurrentPage ? "active" : "")">@i</a>
            }
        </div>
    </div>

</body>
