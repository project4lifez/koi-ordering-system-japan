@{
    ViewData["Title"] = "Farm Information";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <h1 class="text-center">Farm Information</h1>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <style>
        body {
            padding: 20px;
            background-color: #f8f9fa; /* Màu nền sáng */
        }

        .form-container {
            width: 100%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .form-control {
            height: calc(2.25rem + 2px);
            border-radius: 0.25rem; /* Làm tròn các góc của input */
        }

        #previewImage {
            margin-top: 10px;
            max-width: 300px;
            height: auto;
            display: none;
        }

        .layout {
            display: flex;
        }

            .layout .sidebar {
                width: 25%;
                padding-right: 15px;
                font-size: 18px;
                font-weight: bold;
                color: #333; /* Màu chữ sidebar */
            }

            .layout .form-content {
                width: 75%;
            }

        /* Styling cho checkbox group */
        .checkbox-group {
            display: flex;
            flex-wrap: wrap;
            gap: 30px; /* Khoảng cách giữa các ô checkbox */
        }

        .form-check {
            display: flex;
            align-items: center;
        }

        .form-check-input {
            margin-right: 5px; /* Khoảng cách giữa checkbox và label */
        }

        /* Đảm bảo form không bị tràn ngang */
        .form-container {
            max-width: 100%;
            overflow-x: hidden;
        }

        /* Điều chỉnh chiều rộng Select2 để tự động co giãn */
        .select2-container {
            width: 100% !important; /* Chiều rộng đầy đủ */
        }

            .select2-container .select2-selection--single {
                width: 100%;
            }

        /* Styling cho disabled Farm ID field */
        #farmId {
            background-color: #e9ecef; /* Màu nền xám nhạt */
            cursor: not-allowed; /* Hiển thị biểu tượng không cho phép chỉnh sửa */
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="layout">
            <div class="sidebar">
                <p class="general-info-label">Update Information</p>
            </div>
            <div class="form-content">
                <form method="post" id="formUpdateFarm" action="/Admin/Manager/EditKoiFarms/@Model.FarmId" enctype="multipart/form-data" onsubmit="return validateForm()">
                    <div id="general-info" class="form-sections">
                        <div class="form-group">
                            <label for="farmId" class="form-label">Farm ID:</label>
                            <input type="text" class="form-control" id="farmId" name="FarmId" value="@Model.FarmId" readonly>
                        </div>
                        <div class="form-group">
                            <label for="FarmName" class="form-label">Name Farm:</label>
                            <input type="text" class="form-control" id="FarmName" name="FarmName" value="@Model.FarmName" required>
                        </div>
                        <div class="form-group">
                            <label for="Location" class="form-label">Location:</label>
                            <input type="text" class="form-control" id="Location" name="Location" value="@Model.Location" required>
                        </div>
                        <div class="form-group">
                            <label for="ContactInfo" class="form-label">Description:</label>
                            <input type="text" class="form-control" id="ContactInfo" name="ContactInfo" value="@Model.ContactInfo" required>
                        </div>
                    </div>
                    <div id="more-info" class="form-sections">
                        <div class="form-group">
                            <label class="form-label dropdown-label">Special Variety:</label>
                            <div class="checkbox-group">
                                @foreach (var variety in ViewBag.Varieties)
                                {
                                    bool isChecked = false;

                                    foreach (var specialVariety in Model.SpecialVarieties)
                                    {
                                        if (specialVariety.VarietyId == variety.VarietyId)
                                        {
                                            isChecked = true;
                                            break;
                                        }
                                    }

                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="variety_@variety.VarietyId"
                                               name="selectedVarietyIds"
                                               value="@variety.VarietyId"
                                        @(isChecked ? "checked" : "")>
                                        <label class="form-check-label" for="variety_@variety.VarietyId">@variety.VarietyName</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="koiImage" class="form-label">Upload Koi Image:</label>
                        <input type="file" class="form-control" id="koiImage" name="ImageUrl" accept="image/*">
                        <img id="previewImage" src="@Model.ImageUrl" alt="Koi Image Preview" style="display:block; margin-top:10px; max-width:100px; height:auto;">
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#variety').select2({
                placeholder: 'Choose a Koi breed',
                allowClear: true
            });
        });

        document.getElementById('koiImage').addEventListener('change', function (event) {
            const previewImage = document.getElementById('previewImage');
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function (e) {
                previewImage.src = e.target.result;
                previewImage.style.display = 'block';
            };

            if (file) {
                reader.readAsDataURL(file);
            } else {
                previewImage.src = '';
                previewImage.style.display = 'none';
            }
        });

        function validateForm() {
            // If everything is valid, show the success message
            alert("Update Farm Successfully!!!");
            return true;
        }
    </script>
</body>
