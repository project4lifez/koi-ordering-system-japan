@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <h1 class="text-center">Farm Information</h1>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <style>
        body {
            padding: 20px;
            background-color: #f8f9fa; /* Màu nền sáng */
        }

        .form-container {
            width: 100%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .form-control {
            height: calc(2.25rem + 2px);
            border-radius: 0.25rem; /* Làm tròn các góc của input */
        }

        .btn-next {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
            padding: 10px 20px;
            float: right;
            cursor: not-allowed;
        }

        #more-info {
            margin-top: 20px;
        }

        #previewImage {
            margin-top: 10px;
            max-width: 300px;
            height: auto;
            display: none;
        }

        .layout {
            display: flex;
        }

            .layout .sidebar {
                width: 25%;
                padding-right: 15px;
                font-size: 18px;
                font-weight: bold;
                color: #333; /* Màu chữ sidebar */
            }

            .layout .form-content {
                width: 75%;
            }

        }

            display: flex;
            align-items: center;
        }

        }

        .select2-container--default .select2-search--dropdown .select2-search__field {
            width: 100%;
            padding: 0.375rem 0.75rem;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            font-size: 1rem;
            background-color: #fff;
        }

        .select2-container--default .select2-results > .select2-results__options {
            max-height: 150px; /* Giới hạn chiều cao */
            overflow-y: auto; /* Cho phép cuộn dọc */
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            background-color: #fff;
            padding: 0.375rem 0;
        }

        .select2-container--default .select2-results__option--highlighted {
            background-color: #007bff;
            color: white;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 100%;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
        }
        /* Đảm bảo form không bị tràn ngang */
        .form-container {
            max-width: 100%;
            overflow-x: hidden;
        }

        /* Điều chỉnh chiều rộng Select2 để tự động co giãn */
        .select2-container {
        }

            .select2-container .select2-selection--single {
                width: 100%;
            }

        #farmId {
            background-color: #e9ecef; /* Màu nền xám nhạt */
            cursor: not-allowed; /* Hiển thị biểu tượng không cho phép chỉnh sửa */
        }

    </style>
</head>
<body>
    <div class="form-container">
        <div class="layout">
            <div class="sidebar">
                <p class="general-info-label">Update Information</p>
            </div>
            <div class="form-content">
                <form method="post" id="formUpdateFarm" action="/Admin/Manager/EditKoiFarms/@Model.FarmId" enctype="multipart/form-data">
                    <div id="general-info" class="form-sections">
                        <div class="form-group">
                            <label for="farmId" class="form-label">Farm ID:</label>
                        </div>
                        <div class="form-group">
                        </div>
                        <div class="form-group">
                        </div>
                        <div class="form-group">
                        </div>
                    </div>
                    <div id="more-info" class="form-sections">
                        <div class="form-group">
                            <div class="checkbox-group">
                                    <div class="form-check">
                                    </div>
                                }
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                    </div>
            </div>
        </div>
    </div>

    <script>
        function submitForm() {
            // Add form submission logic here
        }

        $(document).ready(function () {
            $('#variety').select2({
                placeholder: 'Choose a Koi breed',
                allowClear: true
            });
        });

        document.getElementById('koiImage').addEventListener('change', function (event) {
            const previewImage = document.getElementById('previewImage');
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function (e) {
                previewImage.src = e.target.result;
                previewImage.style.display = 'block';
            };

            if (file) {
                reader.readAsDataURL(file);
            } else {
                previewImage.src = '';
                previewImage.style.display = 'none';
            }
        });
    </script>


</body>
