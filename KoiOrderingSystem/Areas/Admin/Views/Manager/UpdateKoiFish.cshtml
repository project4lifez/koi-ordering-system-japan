@{
    ViewData["Title"] = "Koi Fish Information";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <h1 class="text-center">Koi Fish Information</h1> <!-- Căn giữa h1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <style>
        body {
            padding: 20px;
        }

        .form-container {
            width: 100%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .form-control {
            height: calc(2.25rem + 2px);
        }

        .btn-next {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
            padding: 10px 20px;
            float: right;
            cursor: not-allowed;
        }

        #more-info {
            margin-top: 20px;
        }

        #previewImage {
            margin-top: 10px;
            max-width: 300px;
            height: auto;
            display: none;
        }

        .layout {
            display: flex;
        }

            .layout .sidebar {
                width: 25%;
                padding-right: 15px;
                font-size: 18px;
                font-weight: bold;
            }

            .layout .form-content {
                width: 75%;
            }

        .section-title {
            margin-top: 153px;
            font-size: 18px;
            font-weight: bold;
            color: #333;
            display: block;
            margin-left: 0;
        }

        .form-group .form-label, .form-group select {
            display: block;
            width: 100%;
        }

        /* Custom style for Select2 dropdown */
        .select2-container .select2-selection--single {
            height: calc(2.25rem + 2px);
            width: 100%;
            padding: 0.375rem 0.75rem;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            font-size: 1rem;
            background-color: #fff;
            display: flex;
            align-items: center;
        }

        .select2-container--default .select2-selection--single:focus,
        .select2-container--default .select2-selection--single:hover {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .select2-container--default .select2-search--dropdown .select2-search__field {
            width: 100%;
            padding: 0.375rem 0.75rem;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            font-size: 1rem;
            background-color: #fff;
        }

        .select2-container--default .select2-results > .select2-results__options {
            max-height: 150px; /* Giới hạn chiều cao */
            overflow-y: auto; /* Cho phép cuộn dọc */
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            background-color: #fff;
            padding: 0.375rem 0;
        }

        .select2-container--default .select2-results__option--highlighted {
            background-color: #007bff;
            color: white;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 100%;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
        }

        /* Đảm bảo form không bị tràn ngang */
        .form-container {
            max-width: 100%;
            overflow-x: hidden;
        }

        /* Điều chỉnh chiều rộng Select2 để tự động co giãn */
        .select2-container {
            width: 30% !important; /* Tăng kích thước chiều rộng lên */
        }

            .select2-container .select2-selection--single {
                width: 100%;
            }

        /* Styling for disabled Koi Fish ID field */
        #koiFishId {
            background-color: #e9ecef;
            cursor: not-allowed;
        }

    </style>
</head>
<body>
    <div class="form-container">
        <div class="layout">
            <div class="sidebar">
                <p class="general-info-label">Update Information</p>
            </div>
            <div class="form-content">
                <form method="post" id="formUpdateKoiFish" action="/Admin/Manager/EditKoiFish/@Model.KoiId" enctype="multipart/form-data">
                    <input type="hidden" name="KoiId" value="@Model.KoiId" /> <!-- Lưu KoiId -->
                    <div id="general-info" class="form-sections">
                        <div class="form-group">
                            <label for="koiFishId" class="form-label">Koi Fish ID:</label>
                            <input type="text" class="form-control" id="koiFishId" name="KoiId" value="@Model.KoiId" readonly>
                        </div>
                        <div class="form-group">
                            <label for="name" class="form-label">Name Koi:</label>
                            <input type="text" class="form-control" id="name" name="KoiName" value="@Model.KoiName" required>
                        </div>
                        <div class="form-group">
                            <label for="description" class="form-label">Description:</label>
                            <input type="text" class="form-control" id="description" name="Description" value="@Model.Description" required>
                        </div>
                    </div>
                    <div id="more-info" class="form-sections">
                        <div class="form-group">
                            <label for="variety" class="form-label dropdown-label">Variety:</label>
                            <select class="form-select" id="variety" name="VarietyId" required>
                                <option value="">Select Koi Variety</option>
                                @foreach (var variety in ViewBag.Varieties)
                                {
                                    <option value="@variety.VarietyId" @(variety.VarietyId == Model.VarietyId ? "selected" : "")>@variety.VarietyName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="koiImage" class="form-label">Upload Koi Image:</label>
                            <input type="file" class="form-control" id="koiImage" name="ImageUrl" accept="image/*">
                            <img id="previewImage" src="@Model?.ImageUrl" alt="Koi Image Preview" style="display:block; margin-top:10px; max-width:100px; height:auto;">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function submitForm() {
            // Add form submission logic here
        }

        $(document).ready(function () {
            $('#variety').select2({
                placeholder: 'Choose a Koi breed',
                allowClear: false
                // minimumResultsForSearch: Infinity Hides the search box
            });
        });

        document.getElementById('koiImage').addEventListener('change', function (event) {
            const previewImage = document.getElementById('previewImage');
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function (e) {
                previewImage.src = e.target.result;
                previewImage.style.display = 'block';
            };

            if (file) {
                reader.readAsDataURL(file);
            } else {
                previewImage.src = '';
                previewImage.style.display = 'none';
            }
        });
    </script>
</body>
