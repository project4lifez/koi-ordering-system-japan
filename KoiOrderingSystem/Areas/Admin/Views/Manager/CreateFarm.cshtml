@{
    ViewData["Title"] = "Koi Fish Information";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <h1 class="text-center">Farm Information</h1>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <style>
        body {
            padding: 20px;
        }

        .form-container {
            width: 100%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .form-control {
            height: calc(2.25rem + 2px);
        }

        .btn-next {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
            padding: 10px 20px;
            float: right;
            cursor: not-allowed;
        }

        #more-info {
            margin-top: 20px;
        }

        #previewImage {
            margin-top: 10px;
            max-width: 300px;
            height: auto;
            display: none;
        }

        .layout {
            display: flex;
        }

            .layout .sidebar {
                width: 25%;
                padding-right: 15px;
                font-size: 18px;
                font-weight: bold;
            }

            .layout .form-content {
                width: 75%;
            }

        .section-title {
            margin-top: 153px;
            font-size: 18px;
            font-weight: bold;
            color: #333;
            display: block;
            margin-left: 0;
        }

        .form-group .form-label, .form-group select {
            display: block;
            width: 100%;
        }
        /* Custom style for Select2 dropdown */
        .select2-container .select2-selection--single {
            height: calc(2.25rem + 2px);
            padding: 0.375rem 0.75rem;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            font-size: 1rem;
            background-color: #fff;
            display: flex;
            align-items: center;
        }

        .select2-container--default .select2-selection--single:focus,
        .select2-container--default .select2-selection--single:hover {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .select2-container--default .select2-search--dropdown .select2-search__field {
            width: 100%;
            padding: 0.375rem 0.75rem;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            font-size: 1rem;
            background-color: #fff;
        }

        .select2-container--default .select2-results > .select2-results__options {
            max-height: 150px; /* Giới hạn chiều cao */
            overflow-y: auto; /* Cho phép cuộn dọc */
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            background-color: #fff;
            padding: 0.375rem 0;
        }

        .select2-container--default .select2-results__option--highlighted {
            background-color: #007bff;
            color: white;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 100%;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
        }
        /* Đảm bảo form không bị tràn ngang */
        .form-container {
            max-width: 100%;
            overflow-x: hidden;
        }

        /* Điều chỉnh chiều rộng Select2 để tự động co giãn */
        .select2-container {
            width: 17% !important;
        }

            .select2-container .select2-selection--single {
                width: 100%;
            }


        .checkbox-group {
            display: flex;
            flex-wrap: wrap;
            gap: 30px; /* Khoảng cách giữa các ô checkbox */
        }

        .form-check {
            display: flex;
            align-items: center;
        }

        .form-check-input {
            margin-right: 5px; /* Khoảng cách giữa checkbox và label */
        }

    </style>
</head>
<body>
    <div class="form-container">
        <div class="layout">
            <div class="sidebar">
                <p class="general-info-label">General Information</p>
                <h2 class="section-title">Additional Information</h2>
            </div>
            <div class="form-content">
                <div id="general-info" class="form-sections">
                    <div class="form-group">
                        <label for="name" class="form-label">Name Farm:</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="description" class="form-label">Location:</label>
                        <input type="text" class="form-control" id="location" name="location" required>
                    </div>
                    <div class="form-group">
                        <label for="description" class="form-label">Description:</label>
                        <input type="text" class="form-control" id="description" name="description" required>
                    </div>
                </div>
                <div id="more-info" class="form-sections">
                    <div class="form-group">
                        <label class="form-label dropdown-label">Special Variety:</label>
                        <div class="checkbox-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="kohaku" name="variety" value="kohaku">
                                <label class="form-check-label" for="kohaku">Kohaku</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="sanke" name="variety" value="sanke">
                                <label class="form-check-label" for="sanke">Sanke</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="showa" name="variety" value="showa">
                                <label class="form-check-label" for="showa">Showa</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="utsuri" name="variety" value="utsuri">
                                <label class="form-check-label" for="utsuri">Utsuri</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="shusui" name="variety" value="shusui">
                                <label class="form-check-label" for="shusui">Shusui</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="asagi" name="variety" value="asagi">
                                <label class="form-check-label" for="asagi">Asagi</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="kohaku_sanke" name="variety" value="kohaku_sanke">
                                <label class="form-check-label" for="kohaku_sanke">Goromo</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="kujaku" name="variety" value="kujaku">
                                <label class="form-check-label" for="kujaku">Kujaku</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="goshiki" name="variety" value="goshiki">
                                <label class="form-check-label" for="goshiki">Goshiki</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="hikari_muji" name="variety" value="hikari_muji">
                                <label class="form-check-label" for="hikari_muji">Hikari Muji</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="taisho" name="variety" value="taisho">
                                <label class="form-check-label" for="taisho">Taisho</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="kawarimono" name="variety" value="kawarimono">
                                <label class="form-check-label" for="kawarimono">Kawarimono</label>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <label for="koiImage" class="form-label">Upload Koi Image</label>
                    <input type="file" class="form-control" id="koiImage" name="Image" accept="image/*" required>
                </div>
                <img id="previewImage" src="" alt="Koi Image Preview">
                <button class="btn-next" onclick="submitForm()">Submit</button>
            </div>
        </div>
    </div>

    <script>
        function submitForm() {
            // Add form submission logic here
        }

        $(document).ready(function () {
            $('#variety').select2({
                placeholder: 'Choose a Koi breed',
                allowClear: true
            });
        });

        document.getElementById('koiImage').addEventListener('change', function (event) {
            const previewImage = document.getElementById('previewImage');
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function (e) {
                previewImage.src = e.target.result;
                previewImage.style.display = 'block';
            };

            if (file) {
                reader.readAsDataURL(file);
            } else {
                previewImage.src = '';
                previewImage.style.display = 'none';
            }
        });
    </script>


</body>