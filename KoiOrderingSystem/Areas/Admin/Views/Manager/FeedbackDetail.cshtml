@model KoiOrderingSystem.Models.Feedback

@{
    ViewData["Title"] = "Feedback Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback Detail</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Updated font-family */
            background-color: #f5f5f5;
            margin: 20px;
        }

        .feedback-detail {
            width: 80%;
            margin: 0 auto;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #333;
            text-align: center;
        }

        .detail-item {
            margin: 15px 0;
            padding: 10px;
            border-left: 4px solid #009688; /* Accent line */
            background-color: #f9f9f9; /* Light background for each detail */
        }

            .detail-item strong {
                color: #009688; /* Accent color for labels */
            }

        .rating {
            color: #ffcc00; /* Gold color for stars */
        }

        /* Button styling */
        .back-button {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 25px;
            background-color: #009688;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .back-button:hover {
                background-color: #00796b;
                color: #e0f7fa; /* Slightly lighter text color on hover */
            }

            .back-button:active {
                background-color: #00695c; /* Darker green on click */
                color: #ffffff;
            }
    </style>

</head>

<body>

    <div class="feedback-detail">
        <h2>FEEDBACK DETAIL</h2>
        <div class="detail-item">
            <strong>Trip:</strong> @(Model.Bookings.FirstOrDefault()?.Trip?.TripName ?? "Unknown Trip")
        </div>
        <div class="detail-item">
            <strong>Customer:</strong> @(Model.Bookings.FirstOrDefault()?.Fullname ?? "Anonymous")
        </div>
        <div class="detail-item">
            <strong>Rating:</strong> <span class="rating">@string.Concat(Enumerable.Repeat('★', Model.Rating ?? 0))</span>
        </div>
        <div class="detail-item">
            <strong>Date:</strong> @Model.Feedbackdate?.ToString("yyyy-MM-dd")
        </div>
        <div class="detail-item">
            <strong>Comment:</strong> @Model.Comments
        </div>

        <a href="/Admin/Manager/Feedback" class="back-button">Back to Feedback List</a>
    </div>

</body>
