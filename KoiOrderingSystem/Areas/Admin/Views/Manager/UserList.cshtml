@{
    ViewData["Title"] = "Koi Fish Information";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: #f4f4f4;
        }

        .user-container {
            min-width: 90%; 
            margin: 50px auto;
            padding: 30px; /* Increased padding */
            background-color: #fff;
            border-radius: 10px; /* Slightly increased border radius */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .user-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px; /* Reduced margin */
        }

            .user-header h1 {
                font-size: 48px; /* Increased font size */
                color: #333;
            }

        .user-new-account-btn {
            background-color: #1070FD;
            color: white;
            border: none;
            padding: 12px 24px; /* Increased button padding */
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px; /* Increased font size */
        }

            .user-new-account-btn:hover {
                background-color: #0e63da; /* Suitable hover color */
            }

        .user-filter-status {
            margin-bottom: 20px; /* Increased margin */
        }

        .user-dropdown {
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            padding: 10px 20px; /* Increased padding */
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px; /* Increased font size */
        }

        .user-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px; /* Increased margin */
            background-color: white;
        }

            .user-table thead th {
                background-color: #f0f0f0;
                padding: 16px; /* Increased padding */
                text-align: center; /* Center the header text */
                border-bottom: 2px solid #e0e0e0;
            }

            .user-table tbody tr td {
                padding: 16px; /* Increased padding */
                border-bottom: 1px solid #e0e0e0;
                vertical-align: middle;
                text-align: center; /* Center other cells */
            }

        .user-info {
            display: inline-block;
            margin-left: 10px;
            text-align: left; /* Keep user info left-aligned */
        }

            .user-info span {
                color: #888;
                font-size: 14px; /* Increased font size */
            }

        .user-img {
            width: 50px; /* Increased image size */
            height: 50px; /* Increased image size */
            border-radius: 50%;
        }

        .user-status {
            padding: 5px 12px; /* Increased padding */
            border-radius: 20px;
            font-size: 14px; /* Increased font size */
            font-weight: bold;
        }

            .user-status.active {
                background-color: #4CAF50;
                color: white;
            }

            .user-status.inactive {
                background-color: #f44336;
                color: white;
            }

        .user-details-btn {
            background-color: #1070FD;
            color: white;
            border: none;
            padding: 10px 16px; /* Increased button padding */
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px; /* Increased font size */
        }

            .user-details-btn:hover {
                background-color: #0e63da; /* Suitable hover color */
            }
    </style>
</head>
<body>
    <div class="user-container">
        <div class="user-header">
            <h1>User List</h1>
            <button class="user-new-account-btn">Create New Account</button>
        </div>

        <div class="user-filter-status">
            <select class="user-dropdown" id="user-status-dropdown">
                <option value="all">Status</option>
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
            </select>
        </div>

        <table class="user-table">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Email</th>
                    <th>Account Status</th>
                    <th>Registration Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img src="user1.png" alt="User 1" class="user-img">
                        <div class="user-info">
                            Nguyen Thanh Tai<br>
                            <span>Customer ID: #19</span>
                        </div>
                    </td>
                    <td>user1@gmail.com</td>
                    <td><span class="user-status active">Active</span></td>
                    <td>2023-03-21</td>
                    <td><button class="user-details-btn">Details</button></td>
                </tr>
                <tr>
                    <td>
                        <img src="user2.png" alt="User 2" class="user-img">
                        <div class="user-info">
                            Phan Anh Khoa<br>
                            <span>Customer ID: #20</span>
                        </div>
                    </td>
                    <td>user2@gmail.com</td>
                    <td><span class="user-status inactive">Inactive</span></td>
                    <td>2023-03-21</td>
                    <td><button class="user-details-btn">Details</button></td>
                </tr>
                <tr>
                    <td>
                        <img src="user3.png" alt="User 3" class="user-img">
                        <div class="user-info">
                            Le Van Viet<br>
                            <span>Customer ID: #21</span>
                        </div>
                    </td>
                    <td>user3@gmail.com</td>
                    <td><span class="user-status active">Active</span></td>
                    <td>2023-03-21</td>
                    <td><button class="user-details-btn">Details</button></td>
                </tr>
                <tr>
                    <td>
                        <img src="user4.png" alt="User 4" class="user-img">
                        <div class="user-info">
                            Ronaldo beo<br>
                            <span>Customer ID: #22</span>
                        </div>
                    </td>
                    <td>user4@gmail.com</td>
                    <td><span class="user-status inactive">Inactive</span></td>
                    <td>2023-03-21</td>
                    <td><button class="user-details-btn">Details</button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            $('#user-status-dropdown').on('change', function () {
                var selectedStatus = $(this).val();

                // Show all rows initially
                $('.user-table tbody tr').show();

                // If active is selected, hide inactive rows
                if (selectedStatus === 'active') {
                    $('.user-table tbody tr').filter(function () {
                        return $(this).find('.user-status').hasClass('inactive');
                    }).hide();
                }
                // If inactive is selected, hide active rows
                else if (selectedStatus === 'inactive') {
                    $('.user-table tbody tr').filter(function () {
                        return $(this).find('.user-status').hasClass('active');
                    }).hide();
                }
            });
        });
    </script>
</body>
