@{
    ViewData["Title"] = "Order Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table td, .table th {
            vertical-align: middle;
        }

        .btn-link {
            text-decoration: underline;
        }

        .form-container {
            display: none; /* Ẩn form ban đầu */
            padding: 20px;
            border: 1px solid #ddd;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px; /* Độ rộng tối đa của form */
            margin: 20px auto; /* Căn giữa form */
            position: relative;
        }

            .form-container h5 {
                font-size: 1.5rem;
                text-align: center;
                margin-bottom: 20px;
            }

        .table td {
            height: 50px;
        }

        .content-cell {
            width: 70%; /* Độ rộng cho cột bên phải (Content) */
        }

        .table td:nth-child(1) {
            width: 30%; /* Độ rộng cho cột bên trái (Topic) */
        }

        .close-btn {
            position: absolute;
            top: 10px;
            right: 20px;
            font-size: 1.5rem;
            cursor: pointer;
        }
        /* Additional styles for the table */
        .table th, .table td {
            text-align: center; /* Center align text in all cells */
        }

            /* Specific width for the No column */
            .table th:nth-child(1), .table td:nth-child(1) {
                width: 50px; /* Set fixed width for "No" column */
                max-width: 50px; /* Ensure it doesn't expand */
                overflow: hidden; /* Prevent overflow */
            }
    </style>
</head>
<body>
    <main class="container-fluid px-4">
        <h1 class="mt-4">Order Management</h1>

        <div class="row mb-4">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 50px">No</th>
                            <th>OrderID</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Form</th>
                            <th>Edit</th>
                            <th>Detail</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>#AKT001</td>
                            <td>2024-09-13</td>
                            <td>Nguyen Thanh Tai</td>
                            <td class="text-success">2000$</td>
                            <td><span class="badge bg-warning">Pending</span></td>
                            <td><a href="#" onclick="showForm()">View</a></td>
                            <td><i class="om-edit-icon">✏️</i></td>
                            <td><i class="om-detail-icon">👁️</i></td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>#GKT002</td>
                            <td>2024-09-13</td>
                            <td>Le Minh Thuan</td>
                            <td class="text-success">2500$</td>
                            <td><span class="badge bg-warning">Pending</span></td>
                            <td><a href="#" onclick="showForm()">View</a></td>
                            <td><i class="om-edit-icon">✏️</i></td>
                            <td><i class="om-detail-icon">👁️</i></td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>#TKT003</td>
                            <td>2024-09-13</td>
                            <td>Le Van Viet</td>
                            <td class="text-success">2300$</td>
                            <td><span class="badge bg-warning">Pending</span></td>
                            <td><a href="#" onclick="showForm()">View</a></td>
                            <td><i class="om-edit-icon">✏️</i></td>
                            <td><i class="om-detail-icon">👁️</i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Form Section -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card form-container" id="tripForm">
                    <span class="close-btn" onclick="closeForm()">×</span> <!-- Nút tắt -->
                    <div class="om-form-header text-center">
                        <img src="koi88.png" alt="Koi88" class="mb-2">
                        <h2>FORM</h2>
                    </div>

                    <h5>Trip Design of Customer</h5>
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td>Full Name</td>
                                <td class="content-cell"></td> <!-- Empty cell for Full Name -->
                            </tr>
                            <tr>
                                <td>Phone Number</td>
                                <td class="content-cell"></td> <!-- Empty cell for Phone Number -->
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td class="content-cell"></td> <!-- Empty cell for Email -->
                            </tr>
                            <tr>
                                <td>Gender</td>
                                <td class="content-cell"></td> <!-- Empty cell for Gender -->
                            </tr>
                            <tr>
                                <td>The farm which want to come</td>
                                <td class="content-cell"></td> <!-- Empty cell for farm -->
                            </tr>
                            <tr>
                                <td>Estimated departure date</td>
                                <td class="content-cell"></td> <!-- Empty cell for departure date -->
                            </tr>
                            <tr>
                                <td>Return date</td>
                                <td class="content-cell"></td> <!-- Empty cell for return date -->
                            </tr>
                            <tr>
                                <td>Number of participants</td>
                                <td class="content-cell"></td> <!-- Empty cell for number of participants -->
                            </tr>
                            <tr>
                                <td>Estimate cost</td>
                                <td class="content-cell"></td> <!-- Empty cell for estimate cost -->
                            </tr>
                            <tr>
                                <td>Hotel accommodation</td>
                                <td class="content-cell"></td> <!-- Empty cell for hotel -->
                            </tr>
                        </tbody>
                    </table>

                    <div class="form-group">
                        <label for="additional">Additional Information</label>
                        <textarea id="additional" class="form-control" rows="4" readonly></textarea> <!-- Empty textarea -->
                    </div>

                    <button class="btn btn-primary mt-3" onclick="printForm()">Print Form</button>
                </div>
            </div>
        </div>

        <script>
            function printForm() {
                const printContent = document.getElementById('tripForm');
                const win = window.open('', '', 'width=800,height=600');
                win.document.write(printContent.outerHTML);
                win.document.close();
                win.print();
                win.close();
            }

            function showForm() {
                document.getElementById('tripForm').style.display = 'block'; // Hiển thị form khi nhấn vào "View"
            }

            function closeForm() {
                document.getElementById('tripForm').style.display = 'none'; // Ẩn form khi nhấn nút tắt
            }
        </script>
    </main>

</body>
